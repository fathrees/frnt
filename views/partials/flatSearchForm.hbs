<form id="flat-search-form">
	<label>City
		<select name="city">
			{{#each cities}}
				<option value="{{this}}">{{this}}</option>
			{{/each}}
		</select>
	</label>
	<label>Rooms from
		<input name="lowRooms" type="number" min="1" value="{{query.lowRooms}}">
	</label>
	<label>to
		<input name="highRooms" type="number" min="1" value="{{query.highRooms}}">
	</label>
	<label>Price from
		<input name="lowPrice" type="number" min="0" value="{{query.lowPrice}}" step="100">
	</label>
	<label>to
		<input name="highPrice" type="number" min="0" value="{{query.highPrice}}" step="100">
	</label>hrn
	<label>Sort by
		<select name="sortBy">
			<option value="createdAt">Created at</option>
			<option value="rooms">Rooms</option>
			<option value="price">Price</option>
		</select>
	</label>
	<select name="sortDirection">
		<option value="1">Inc</option>
		<option value="-1">Dec</option>
	</select>
	<button type="submit">Search</button>
</form>